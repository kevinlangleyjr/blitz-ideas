{
  "name": "ideas",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz dev",
    "build": "blitz build",
    "start": "blitz start --port $PORT",
    "studio": "blitz prisma studio",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome",
    "test": "prisma generate && yarn test:jest && yarn test:e2e",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:server": "cross-env NODE_ENV=test blitz prisma migrate deploy --preview-feature && blitz build && cross-env NODE_ENV=test blitz start -p 3099",
    "test:e2e": "cross-env NODE_ENV=test start-server-and-test test:server http://localhost:3099 cy:run"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc && npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "cacheDirectories": [
    ".next/cache"
  ],
  "dependencies": {
    "@headlessui/react": "0.3.1",
    "@prisma/client": "~2.17",
    "@sendgrid/mail": "7.4.2",
    "blitz": "0.30.0",
    "final-form": "4.20.1",
    "nock": "13.0.9",
    "preview-email": "3.0.3",
    "prisma": "~2.17",
    "react": "0.0.0-experimental-3310209d0",
    "react-dom": "0.0.0-experimental-3310209d0",
    "react-error-boundary": "3.1.0",
    "react-final-form": "6.5.2",
    "tailwindcss": "2",
    "typescript": "4.1.5",
    "zod": "1.11.11"
  },
  "devDependencies": {
    "@cypress/skip-test": "2.6.0",
    "@types/preview-email": "2.0.0",
    "@types/react": "17.0.2",
    "autoprefixer": "10",
    "cross-env": "7.0.3",
    "cypress": "6.8.0",
    "eslint": "7.20.0",
    "faker": "5.5.2",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "postcss": "8",
    "start-server-and-test": "1.12.1"
  },
  "private": true
}
